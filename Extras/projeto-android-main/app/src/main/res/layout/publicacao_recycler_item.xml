<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_publicacao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="8dp"
    android:backgroundTint="@color/white"
    android:elevation="10dp"
    android:padding="5dp"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/baloo"
            android:textColor="@color/dark_gray"
            android:textSize="18sp"
            tools:text="Título da  publicação, primeiro item da lista das publicações do aplicativo de solicitações" />

        <TextView
            android:id="@+id/tv_localizacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_titulo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo"
            android:textColor="@color/gray"
            tools:text="Localização da publicação realizada que ficará na lista de publicações, texto texto texto texto." />

        <TextView
            android:id="@+id/tv_servico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_localizacao"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/baloo"
            android:textSize="16sp"
            android:textColor="@color/gray"
            tools:text="Servico" />

        <TextView
            android:id="@+id/tv_Curtidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_localizacao"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/baloo"
            android:textSize="16sp"
            android:textColor="@color/gray"
            tools:text="200" />

        <TextView
            android:id="@+id/tv_Curtir"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@id/tv_localizacao"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_Curtidas"
            android:drawableBottom="@drawable/ic_baseline_hearth_border_24"
            android:fontFamily="@font/baloo"
            android:textColor="@color/gray" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
